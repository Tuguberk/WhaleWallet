# Wallet Configuration
# Option 1: Single wallet (backwards compatible)
WALLET_ADDRESS=YOUR_WALLET_ADDRESS
WALLET_NAME=Main Wallet

# Option 2: Multiple wallets (JSON format)
# WALLETS={"Main Wallet":"0x123...","Trading":"0x456...","Savings":"0x789..."}
# When using WALLETS, WALLET_ADDRESS and WALLET_NAME are ignored

# API Keys
ETHERSCAN_API_KEY=YOUR_ETHERSCAN_API_KEY

# Telegram Configuration
TELEGRAM_BOT_TOKEN=YOUR_BOT_TOKEN
# TELEGRAM_CHAT_ID is optional - bot will accept /start from any user/group
# If you want to restrict to a specific chat, uncomment and set:
# TELEGRAM_CHAT_ID=YOUR_CHAT_ID
